<div id="wrap">
<center>
  <div style="background:transparent !important" class="jumbotron">
    <h1>Blog</h1>
    <p>Add an interesting post to the blog by clicking below!</p>
    <%= link_to new_post_path, remote: true do %>
    <button class="btn btn-info btn-lg">New Post</button>
    <% end %>
  </div>
</center>


<div id="task-form" style="display:none;"></div>
<tr align="center">
  <div class="container">
    <% @posts.each do |post| %>

    <div class="page-header">
      <h1><%= post.title %></h1>
      <p>Created on
        <%= post.created_at.strftime('%b %d, %Y') %>
        by user:
        <%= post.user.email%>
      </p>
    </div>

    <div>
      <%= raw(post.body).truncate(358) %>
    </div>

    <div class="text-center">
      <%= link_to "READ MORE", post_path(post) %>
      <% if post.user == current_user %>

      <%= link_to edit_post_path(post), remote: true do %>
      <p>Edit
      <% end %>
        |
        <%= link_to 'Delete', post, method: :delete, data: {confirm: "You sure?"}, :remote => true, :class => 'delete_post' %>
      </p>
      <% end %>
    </div>

    <% end %>

  </tr>
</div>
</div>

        <footer class="container-fluid text-center"><p> Thank you for coming to our website . Copyright goes here. </p></footer>
